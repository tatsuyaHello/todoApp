<h1>todoApp</h1>

<%= link_to 'Add', new_task_path %>
<div class="contents">
	<table>
		<tr>
			<th>todo task</th>
			<th>deadline</th>
			<th>finish?</th>
			<th>comment</th>
		</tr>
		<% @task.each do |task| %>
		<tr>
			<td><%= link_to task.content, task_path(task) %></td>
			<td><%= task.deadline %></td>
			<td><%= task.done %></td>
			<td><%= task.comment %></td>
			<td><%= link_to 'Edit', edit_task_path(task) %></td>
			<td><%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: 'Are you sure?'} %></td>
		</tr>
		<% end %>
	</table>
	
</div>